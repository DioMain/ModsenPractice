{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@apptypes/*": ["types/*"],
      "@hooks/*": ["hooks/*"],
      "@api/*": ["api/*"],
      "@redux/*": ["redux/*"],
      "@firebase/*": ["firebase/*"],
      "@helpers/*": ["helpers/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": ["./src/**/*"]
}
